  <script>
    function sendMail(addresses) {
      const mailto = `mailto:${addresses.join(';')}`;
      window.location.href = mailto;
    }

    function sendBccMail(bccAddresses) {
      const mailto = `mailto:?bcc=${bccAddresses.join(';')}`;
      window.location.href = mailto;
    }
  </script>
